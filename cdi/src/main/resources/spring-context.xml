<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="BeanContainer" class="org.beangle.commons.cdi.spring.context.SpringContainer">
    <property name="moduleLocations" value="classpath*:META-INF/beangle/cdi.xml" />
    <property name="reconfigLocations" value=";classpath*:spring-config.xml" />
  </bean>

  <import resource="classpath*:META-INF/spring/*.xml" />
  <import resource="classpath*:spring.xml" />
</beans>
